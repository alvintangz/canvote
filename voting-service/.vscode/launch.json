{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server - Node",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "serve"]
        },
        {
            "name": "Launch Server - Nodemon",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "serve:dev"]
        }
    ]
}